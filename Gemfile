  gem 'sass-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl'
  gem 'simplecov'

  gem 'mina'
  gem 'mina-config', require: false
end
